{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Claude Code Session Start v1",
  "description": "Event published when a Claude Code CLI session begins",
  "type": "object",
  "required": [
    "session_id",
    "timestamp"
  ],
  "additionalProperties": true,
  "properties": {
    "session_id": {
      "type": "string",
      "description": "Unique identifier for the Claude Code session",
      "pattern": "^[a-zA-Z0-9_-]+$"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when session started"
    },
    "worktree": {
      "type": ["string", "null"],
      "description": "Git worktree path if using worktrees"
    },
    "branch": {
      "type": ["string", "null"],
      "description": "Current git branch name"
    },
    "repository": {
      "type": ["string", "null"],
      "description": "Repository name"
    },
    "working_directory": {
      "type": ["string", "null"],
      "description": "Current working directory path"
    },
    "model": {
      "type": ["string", "null"],
      "description": "Claude model being used (e.g., 'claude-opus-4-5')"
    },
    "parent_session_id": {
      "type": ["string", "null"],
      "description": "Previous session ID if resuming from autocompact"
    },
    "initial_prompt": {
      "type": ["string", "null"],
      "description": "The initial user prompt/task (truncated)"
    },
    "meta": {
      "type": ["object", "null"],
      "additionalProperties": true
    }
  }
}
