{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Claude Code Session End v1",
  "description": "Event published when a Claude Code CLI session ends",
  "type": "object",
  "required": [
    "session_id",
    "timestamp",
    "end_reason"
  ],
  "additionalProperties": true,
  "properties": {
    "session_id": {
      "type": "string",
      "description": "Unique identifier for the Claude Code session",
      "pattern": "^[a-zA-Z0-9_-]+$"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when session ended"
    },
    "end_reason": {
      "type": "string",
      "enum": ["completed", "autocompact", "user_exit", "error", "timeout"],
      "description": "Reason the session ended"
    },
    "duration_seconds": {
      "type": "integer",
      "minimum": 0,
      "description": "Total session duration in seconds"
    },
    "worktree": {
      "type": ["string", "null"],
      "description": "Git worktree path"
    },
    "branch": {
      "type": ["string", "null"],
      "description": "Current git branch name"
    },
    "summary": {
      "type": ["string", "null"],
      "description": "Summary of work completed during session"
    },
    "tasks_completed": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of tasks marked completed"
    },
    "tasks_pending": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of tasks still pending"
    },
    "files_modified": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of files modified during session"
    },
    "commits_created": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "sha": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        },
        "required": ["sha"]
      },
      "description": "Git commits created during session"
    },
    "continuation_context": {
      "oneOf": [
        { "type": "null" },
        { "$ref": "session.context.v1.schema.json" }
      ],
      "description": "Context for session continuation (if autocompact)"
    },
    "meta": {
      "type": ["object", "null"],
      "additionalProperties": true
    }
  }
}
