{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["vitest/globals"]
  },
  "include": [
    "app/**/*",
    "lib/**/*",
    "__tests__/**/*",
    "vitest.config.ts",
    "vitest.setup.ts"
  ]
}
