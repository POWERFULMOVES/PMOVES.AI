+      - GLANCER_PORT=${GLANCER_PORT:-9105}
+      - GLANCER_PUBLIC_BASE_URL=${GLANCER_PUBLIC_BASE_URL:-http://localhost:9105}
+      - GLANCER_BASIC_AUTH_USER=${GLANCER_BASIC_AUTH_USER:-glancer}
