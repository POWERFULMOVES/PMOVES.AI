@@ -886,6 +886,28 @@
     profiles: ["invidious"]
     networks: [pmoves]
 
+  glancer:
+    image: ${GLANCER_IMAGE:-ghcr.io/powerfulmoves/glancer:latest}
+    build:
+      context: ./services/glancer
+      dockerfile: ${GLANCER_DOCKERFILE:-Dockerfile}
+    restart: unless-stopped
+    env_file: [env.shared.generated, env.shared, .env.generated, .env.local]
