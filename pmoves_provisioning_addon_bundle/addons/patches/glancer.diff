+      - GLANCER_HEALTH_PATH=${GLANCER_HEALTH_PATH:-/healthz}
+    ports: ["${GLANCER_PORT:-9105}:${GLANCER_PORT:-9105}"]
+    healthcheck:
+      test: ["CMD-SHELL", "wget -qO- http://localhost:${GLANCER_PORT:-9105}${GLANCER_HEALTH_PATH:-/healthz} || exit 1"]
+      interval: 30s
+      timeout: 5s
+      retries: 3
+    profiles: ["glancer"]
+    networks: [pmoves]
