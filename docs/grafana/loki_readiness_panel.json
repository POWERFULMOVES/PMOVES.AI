{
  "type": "stat",
  "title": "Loki /ready",
  "gridPos": { "h": 3, "w": 4, "x": 0, "y": 0 },
  "targets": [
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "expr": "probe_success{job=\"blackbox\", instance=\"http://loki:3100/ready\"}",
      "legendFormat": "ready"
    }
  ],
  "options": {
    "reduceOptions": { "values": false, "calcs": ["lastNotNull"] },
    "orientation": "auto", "textMode": "auto", "colorMode": "thresholds",
    "graphMode": "none"
  },
  "fieldConfig": {
    "defaults": {
      "thresholds": { "mode": "absolute", "steps": [ {"color": "red", "value": 0}, {"color": "green", "value": 1} ] },
      "unit": "bool"
    },
    "overrides": []
  }
}

